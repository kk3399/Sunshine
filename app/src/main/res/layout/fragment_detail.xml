<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.krishnadamarla.sunshine.DetailActivity$PlaceholderFragment"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODAY"
            android:id="@+id/detail_item_day_textview"
            android:textSize="24sp"
            android:fontFamily="sans-serif-condensed">
        </TextView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_item_date_textview"
            android:text="June 24"
            android:textSize="16sp"
            android:textColor="@color/light_black"
            android:fontFamily="sans-serif-condensed">
        </TextView>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"

        >

        <LinearLayout
            android:layout_gravity="left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="right">
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_item_high_textview"
                android:text="80"
                android:textSize="96sp"
                android:fontFamily="sans-serif-light">
            </TextView>

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_item_low_textview"
                android:text="60"
                android:textSize="48sp"
                android:textColor="@color/light_black"
                android:fontFamily="sans-serif-light">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/detail_item_art_imageview"
                android:src="@drawable/art_clear"/>

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:id="@+id/detail_item_forecast_textview"
                android:text="Sunny"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/light_black"
                android:fontFamily="sans-serif-condensed">
            </TextView>
        </LinearLayout>

    </LinearLayout>




        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HUMIDITY: "
            android:id="@+id/detail_item_humidity_textview"
            android:textAppearance="?android:textAppearanceLarge"
            android:fontFamily="sans-serif-light">
        </TextView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIND:"
            android:id="@+id/detail_item_wind_textview"
            android:textAppearance="?android:textAppearanceLarge"
            android:fontFamily="sans-serif-light">
        </TextView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRESSURE:"
            android:id="@+id/detail_item_pressure_textview"
            android:textAppearance="?android:textAppearanceLarge"
            android:fontFamily="sans-serif-light">
        </TextView>

    </LinearLayout>

</ScrollView>